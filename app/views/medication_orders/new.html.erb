<div class="container py-5 mt-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white form-card p-3 shadow">
        <h2>Criar um novo tratamento:</h2>
        <%= simple_form_for [ @medication_order ] do |f| %>
          <%= f.association :medication, label: "Nome do Medicamento", label_method: :commercial_name, class: "form-control form-control-lg" %>
          <%= f.association :medication, label: "Princípio Ativo do Medicamento", label_method: :active_substance, class: "form-control form-control-lg" %>
          <%= f.association :pharmacy, label: "Posto de Saúde", label_method: :pharmacy_name, class: "form-control form-control-lg" %>
          <%= f.input :units, label: "Unidades", class: "form-control form-control-lg" %>
          <%= f.submit :create, label: "Criar", class: 'btn-medium' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
