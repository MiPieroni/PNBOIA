<div data-controller="display-numbers" data-action="scroll@window->display-numbers#updateNumber:!passive">
  <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active banner-container" data-bs-interval="4500" style="background-image: linear-gradient(to left, rgba(255,255,255,0), rgba(255,255,255,0.6)), url(https://res.cloudinary.com/dwzrjmdwm/image/upload/v1657824393/Boias%20Brasil/20201210_164352_qepfxm-Sharpened_hvddbr.jpg);">
        <div class="d-flex w-100 h-100 align-items-center">
          <p id="first-img-text">PNBOIA completa 10 anos, venha fazer parte desta história.</p>
        </div>
      </div>
      <div class="carousel-item banner-container" data-bs-interval="4000" style="background-image: linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,0.6)), url(https://res.cloudinary.com/dwzrjmdwm/image/upload/v1657824393/Boias%20Brasil/20201210_164352_qepfxm-Sharpened_hvddbr.jpg);">
        <div class="d-flex flex-column w-100 h-100 justify-content-center">
          <p>PNBOIA completa 10 anos, venha fazer parte desta história.</p>
          <%= link_to "Inscrever", new_donation_path, class:"btn-donation mt-5" %>
        </div>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
  <div class="info-cards">
    <div class="card-category">
      <h2 data-display-numbers-target="medication"> <%= Donation.count(:units) %></h2>
      <h4 class="px-2"> Boias lançadas</h4>
    </div>
    <div class="card-category">
      <h2 data-display-numbers-target="patient"><%= MedicationOrder.count %></h2>
      <h4 class="px-2"> Trabalhos publicados</h4>
    </div>
    <div class="card-category">
      <h2 data-display-numbers-target="center"><%= Donation.count(:pharmacy_id) %></h2>
      <h4 class="px-2"> xxxxxx</h4>
    </div>
  </div>
  <div class="icon-cards">
    <div class="icon-category">
      <div class="icon-image">
        <%= image_tag("https://res.cloudinary.com/dwzrjmdwm/image/upload/v1657829413/Boias%20Brasil/marinha-brasil-logo-2_ehcuxd.png") %>
      </div>
    </div>
    <div class="icon-category">
      <div class="icon-image">
        <%= image_tag("https://res.cloudinary.com/dwzrjmdwm/image/upload/v1657829396/Boias%20Brasil/brasao_divzd1.png") %>
      </div>
    </div>
    <div class="icon-category">
      <div class="icon-image">
        <%= image_tag("https://res.cloudinary.com/dwzrjmdwm/image/upload/v1657829659/Boias%20Brasil/logo-petrobras-escudo-2048_wei4ye.png") %>
      </div>
    </div>
  </div>
</div>
